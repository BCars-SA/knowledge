# Production Environment Configuration for My Super Service
# Copy this file to .env.production and configure the values below
# Replace all instances of TO-SET-ON-DEPLOYMENT with actual secure values

# =============================================================================
# SECURITY WARNING: Change all default passwords and API keys before deployment!
# =============================================================================

# API Server Configuration
API_KEY=TO-SET-ON-DEPLOYMENT
CORS_ORIGIN=TO-SET-ON-DEPLOYMENT
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Logging Configuration (use 'info' or 'warn' for production)
LOG_LEVEL=info
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_COLORIZE=false
LOG_FILE_ENABLED=false

# LLM Configuration (Required)
# Google VertexAI authentication (if using VertexAI models)
GOOGLE_APPLICATION_CREDENTIALS=/app/google-application-credentials.json

# Chat LLM
LLM_CHAT_PROVIDER=vertexai
#LLM_CHAT_API_KEY=TO-SET-ON-DEPLOYMENT
LLM_CHAT_MODEL=gemini-2.5-flash
LLM_CHAT_MAX_TOKENS=2048
LLM_CHAT_HEADERS_HTTP_REFERER=https://my-super-service.com
LLM_CHAT_HEADERS_X_TITLE=My Super Service: Chat
# VertexAI specific vars (west2 - London, the best throughput for Europe)
LLM_CHAT_LOCATION=europe-west2
LLM_CHAT_THINKING_BUDGET=0

# Common LLM
LLM_COMMON_PROVIDER=vertexai
#LLM_COMMON_API_KEY=TO-SET-ON-DEPLOYMENT
LLM_COMMON_MODEL=gemini-2.5-flash
LLM_COMMON_MAX_TOKENS=2048
LLM_COMMON_HEADERS_HTTP_REFERER=https://my-super-service.com
LLM_COMMON_HEADERS_X_TITLE=My Super Service: Common
# VertexAI specific vars (west2 - London, the best throughput for Europe)
LLM_COMMON_LOCATION=europe-west2
LLM_COMMON_THINKING_BUDGET=0

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=TO-SET-ON-DEPLOYMENT
POSTGRES_DB=my_super_service

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Redis Configuration
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_PASSWORD=TO-SET-ON-DEPLOYMENT

# Cache TTL Configuration
